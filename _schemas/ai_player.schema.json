{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI Player Schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^tof1\\.a0_\\d{2}$"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 120
    },
    "age_band": {
      "type": "string",
      "enum": ["3-5", "5-8", "8-12"]
    },
    "voice": {
      "type": "string"
    },
    "pages": {
      "type": "integer",
      "const": 32
    },
    "style_tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "safety": {
      "type": "object",
      "properties": {
        "rating": { "type": "string" },
        "violence": { "type": "string" },
        "fear": { "type": "string" }
      },
      "required": ["rating", "violence", "fear"],
      "additionalProperties": false
    },
    "checks": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Recommended: 32_files, 3_paragraphs_per_page, has_illustration_prompt, has_code_task"
    }
  },
  "required": [
    "id",
    "title",
    "age_band",
    "voice",
    "pages",
    "style_tags",
    "safety",
    "checks"
  ],
  "additionalProperties": false
}
